@model AppUserLoginViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}


<form class="w-50 mx-auto mt-4 shadow" method="post" asp-action="Login">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName"></span>
        <input class="form-control" asp-for="UserName" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password"></span>
        <input class="form-control" asp-for="Password" />
    </div>
    <div class="form-check">
        <label class="form-check-label" asp-for="@Model.IsPresistent"></label>
        <input type="checkbox" class="form-check-input" asp-for="@Model.IsPresistent"/>
    </div>
    <input type="submit" class="btn btn-success" value="Giriş" />
    <p>Üye değil misiniz ? Hemen üye olmak için <a asp-controller="Home" asp-action="Register" class="alert-link">tıklayınız</a></p>
</form>





