@model ReportUpdateViewModel
@{
    ViewData["Title"] = "UpdateReport";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}


<form class="w-75 mx-auto p-3" method="post" asp-action="UpdateReport">

    <div class="card text-white bg-primary mb-3 w-100">
        <div class="card-header">
            <h4 class="text-center">Report Yaz</h4>
        </div>
        <div class="card-body">
            <p> Görev : @Model.Job.Name</p>
            <p> Görevin Açıklaması : @Model.Job.Description</p>
            <p> Görevin Aciliyet Durumu : @Model.Job.Urgency.Description</p>
        </div>
    </div>
    <input type="hidden" asp-for="@Model.JobId" />
    <div class="form-group">
        <label asp-for="@Model.Description"></label>
        <span asp-validation-for="@Model.Description"></span>
        <input asp-for="@Model.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Detail"></label>
        <span asp-validation-for="@Model.Detail"></span>
        <textarea asp-for="@Model.Detail" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Save</button>
    </div>
</form>

@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>

}

