@model StaffJobViewModel
@{
    ViewData["Title"] = "PersonelJoblendir";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card mx-auto" style="width: 18rem;">
            <div class="card-header">
                <h4> @Model.Job.ad </h4>
            </div>
            <div class="card-body">

                <p class="card-text">@Model.Job.Description</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@Model.Job.Urgency.Description</li>
            </ul>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="/img/@Model.AppUser.Picture" class="card-img img-fluid" style="height:10rem;" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.AppUser.ad @Model.AppUser.Surad</h5>
                        <p class="card-text"><getirJobileAppUserId app-user-id="@Model.AppUser.Id"></getirJobileAppUserId></p>
                        <p class="card-text">
                            <small class="text-muted">@Model.AppUser.Email</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 text-center">
        <form asp-action="AssignStaff" method="post">
            <input type="hidden" name="AppUserId" value="@Model.AppUser.Id" />
            <input type="hidden" name="JobId" value="@Model.Job.ID" />
            <p class="lead">
                Yukarıda bulunan göreve yukarıdaki personel atanacaktır.Emin misiniz?
            </p>
            <a asp-action="AssignStaff" asp-route-id="@Model.Job.ID" class="btn btn-danger btn-sm">Vazgeç</a>
            <button class="btn btn-success btn-sm">Görevlendir</button>
        </form>
    </div>
</div>
