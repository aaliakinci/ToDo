@model JobListAllViewModel
@{
    ViewData["Title"] = "Detaillandir";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Report.Count > 0)
{
    <a asp-action="ExcelGetir" class="btn btn-light mt-3" asp-route-id="@Model.ID" target="_blank"><i class="fas fa-file-excel mr-2"></i>Excel</a>
    <a asp-action="PdfGetir" class="btn btn-light mt-3" asp-route-id="@Model.ID" target="_blank"><i class="fas fa-file-pdf mr-2"></i>Pdf</a>
    <table class="table table-hover table-bordered text-center mt-2">
        <thead>
            <tr>
                <th colspan="3"> @Model.AppUser.Name @Model.AppUser.Surname çalışanının @Model.ad görevi üzerinde yazdığı Reportlar</th>
            </tr>
            <tr>
                <th>#</th>
                <th>Tanım</th>
                <th>Detail</th>
            </tr>
        </thead>
        @foreach (var Report in Model.Report)
        {
            <tbody>
                <tr>
                    <th>@Report.Id</th>
                    <th>@Report.Description</th>
                    <th>@Report.Detail</th>
                </tr>
            </tbody>
        }
    </table>
}
else
{
    <div class="text-center">
        <p>@Model.ad görevi üzerinde çalışan @Model.AppUser.Name @Model.AppUser.Surname çalışanınız henüz herhangi bir Report yazmadı.</p>
    </div>

}

