@model JobAddViewModel 
@{
    ViewData["Title"] = "AddJob";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form class="w-75 mx-auto p-3 shadow" method="post" asp-action="AddJob">
    <div class="form-group">
        <!---->
        <label asp-for="ad" class="col-form-label"></label>
        <span asp-validation-for="ad" class="text-danger"></span>
        <input type="text" asp-for="ad" class=" form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-form-label"></label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <textarea type="text" asp-for="Description" class=" form-control"></textarea>
        <!---->
    </div>
    <div class="form-group">
        <label asp-for="UrgencyId" class="col-form-label"></label>
        <span asp-validation-for="UrgencyId" class="text-danger"></span>
        <select asp-for="UrgencyId" class=" form-control" asp-items="ViewBag.Urgencyler">
            <option hidden value="-1" class="form-control">Seçiniz..</option>
        </select>
        <!---->
    </div>
    <input type="submit" class="btn btn-success btn-lg" value="Save" />
</form>

@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>

}

