        <span asp-validation-for="ad" class="text-danger"></span>
        <input type="text" asp-for="ad" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-form-label"></label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <input type="text" asp-for="Description" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="UrgencyId" class="col-form-label"></label>
        <span asp-validation-for="UrgencyId" class="text-danger"></span>
        <select class="form-control" asp-items="ViewBag.Urgencyler" asp-for="UrgencyId">
            <option value="-1" hidden>Seçiniz</option>
        </select>
    </div>
