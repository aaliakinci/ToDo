@model List<GorevListAllViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count>0)
{
    <table class="table table-hover table-sm mt-3">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Açıklama</th>
                <th>Oluşturulma Tarihi</th>
                <th>Çalışan Personel</th>
                <th>Aciliyet</th>
                <th>Rapor Sayısı</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Aciklama</td>
                <td>@item.OlusturulmaTarihi.ToString("D")</td>
                <td>@{
                    if (item.AppUser==null)
                    {
                        <span class="badge badge-danger">Çalışan personel bulunmamakta</span>
                    }
                    else
                    {
                        <span class=" badge badge-success p-2">@item.AppUser.Name çalışıyor</span>
                    }
                    
                }</td>
                <td> @item.Aciliyet.Tanim</td>
                <td>@item.Rapor.Count</td>
                <td>
                    @{
                        if (item.AppUser == null)
                        {
                            <a asp-action="AtaPersonel" asp-route-id="@item.ID" class="btn btn-info btn-sm" >Personel Ata</a>
                        }
                        else
                        {
                            <a asp-action="Detaylandir" asp-route-id="@item.ID" class="btn btn-info btn-sm">Detay Göster</a>
                        }

                                }
                            </td>



            </tr>
            }

        </tbody>


    </table>
}
else
{
<div class="my-3 text-center lead">
    <p>Görev bulunmamaktadır</p>
</div>
    
}

