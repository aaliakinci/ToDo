@model GorevListAllViewModel
@{
    ViewData["Title"] = "Detaylandir";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Rapor.Count > 0)
{
    <a asp-action="ExcelGetir" class="btn btn-light mt-3" asp-route-id="@Model.ID" target="_blank"><i class="fas fa-file-excel mr-2"></i>Excel</a>
    <a asp-action="PdfGetir" class="btn btn-light mt-3" asp-route-id="@Model.ID" target="_blank"><i class="fas fa-file-pdf mr-2"></i>Pdf</a>
    <table class="table table-hover table-bordered text-center mt-2">
        <thead>
            <tr>
                <th colspan="3"> @Model.AppUser.Name @Model.AppUser.Surname çalışanının @Model.Ad görevi üzerinde yazdığı raporlar</th>
            </tr>
            <tr>
                <th>#</th>
                <th>Tanım</th>
                <th>Detay</th>
            </tr>
        </thead>
        @foreach (var rapor in Model.Rapor)
        {
            <tbody>
                <tr>
                    <th>@rapor.Id</th>
                    <th>@rapor.Tanim</th>
                    <th>@rapor.Detay</th>
                </tr>
            </tbody>
        }
    </table>
}
else
{
    <div class="text-center">
        <p>@Model.Ad görevi üzerinde çalışan @Model.AppUser.Name @Model.AppUser.Surname çalışanınız henüz herhangi bir rapor yazmadı.</p>
    </div>

}

