@model List<UrgencyViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count > 0)
{
    <a asp-action="AddUrgency" asp-controller="Urgency" asp-area="Admin" class="btn btn-outline-dark my-4"> <i class="fas fa-plus-circle mr-2"></i>Urgency Ekle</a>
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <td>Numara</td>
                <td>adı</td>
                <td>İşlem</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Description</td>
                    <td><a asp-action="UpdateUrgency" asp-controller="Urgency" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-primary"><i class="far fa-edit mr-2"></i>Update</a></td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="container my-5">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <div class="row">
                    <div class="col-12">
                        <h4 class="text-center lead">
                            Sistemde kayıtlı Urgency Statusu bulunamadı
                        </h4>
                    </div>
                    <div class="col-12 d-flex justify-content-center">
                        <a asp-action="AddUrgency" asp-controller="Urgency" asp-area="Admin" class="btn btn-outline-dark my-4"><i class="fas fa-plus-circle mr-2"></i>Urgency Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}


